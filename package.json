{
  "name": "mean-typescript",
  "version": "1.0.0",
  "description": "project description",
  "main": "index.js",
  "scripts": {
    "clean-dist": "rm -rf ./dist",
    "clean-build": "rm -rf ./build",
    "clean": "npm-run-all clean-dist clean-build",
    "precommit": "lint-staged",
    "start": "npm-run-all clean build watch",
    "start-dev": "nodemon --inspect=0.0.0.0:9229 build/api.min.js",
    "serve": "node build/api.min.js",
    "build-watch": "npm run build && npm-run-all -p watch start-dev",
    "build": "npm-run-all build-ts lint-ts copy-static-assets build-webpack",
    "build-ts": "tsc",
    "build-webpack": "webpack",
    "lint-ts": "tslint -c tslint.json -p tsconfig.lint.json -t stylish --force",
    "watch-node": "nodemon --watch src -e ts,ejs --exec npm run serve",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest",
    "docker-debug": "docker-compose up",
    "copy-static-assets": "node config/config.js"
  },
  "dependencies": {
    "async": "^2.6.2",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "ejs": "^2.5.7",
    "express": "^4.16.4",
    "express-validator": "^3.2.1",
    "helmet": "^3.18.0",
    "knex": "^0.19.5",
    "lodash": "^4.17.15",
    "merge-descriptors": "^1.0.1",
    "method-override": "^2.3.10",
    "morgan": "^1.9.1",
    "mysql": "^2.17.1",
    "request": "^2.88.0"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/<rootDir>/src/.*|(\\.|/)spec)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,ts,tsx,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/async": "^2.4.2",
    "@types/bunyan": "^1.8.6",
    "@types/compression": "0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "^4.1.4",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/fs-extra": "^5.1.0",
    "@types/helmet": "0.0.43",
    "@types/jest": "^24.0.12",
    "@types/method-override": "0.0.31",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.0.0",
    "@types/shelljs": "^0.8.5",
    "concurrently": "^4.1.0",
    "fs-extra": "^2.1.2",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.6",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "shelljs": "^0.8.3",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^5.5.2",
    "typescript": "^3.4.5",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin": "^0.5.0"
  }
}
